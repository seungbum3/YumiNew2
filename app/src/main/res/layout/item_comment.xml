<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- 작성자 닉네임 TextView 추가 -->
    <TextView
        android:id="@+id/commentNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 댓글 내용 -->
    <TextView
        android:id="@+id/commentText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="댓글 내용"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentNickname" />

    <!-- 댓글 타임스탬프 -->
    <TextView
        android:id="@+id/commentTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-03-03 10:30:00"
        android:textColor="#888888"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentText" />

    <View
        android:id="@+id/divider1"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_reply" />

    <!-- item_comment.xml 내에 추가 -->
    <TextView
        android:id="@+id/text_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답글달기"
        android:textColor="#007AFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/commentTimestamp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- 작성된 답글을 표시할 TextView (초기에는 숨김 처리) -->
    <TextView
        android:id="@+id/text_reply_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/text_reply"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_reply_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
